<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg4"
        tools:context=".Initial">

    <TextView
            android:id="@+id/textAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Manager"
            android:textSize="30sp"
            android:textColor="#fff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp"
    />
    <EditText android:layout_width="match_parent" android:layout_height="50dp"
              android:id="@+id/editLogin"
              android:hint="email"
              android:gravity="center"
              app:layout_constraintTop_toBottomOf="@id/textAppTitle"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/editPassword"
              android:hint="senha"
              android:gravity="center"
              app:layout_constraintTop_toBottomOf="@id/editLogin"
    />
    <Button android:layout_width="match_parent" android:layout_height="50dp"
            android:id="@+id/buttonLogin"
            app:layout_constraintTop_toBottomOf="@+id/editPassword"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="50dp"
            android:text="Entrar"

    />
    <Button android:layout_width="match_parent" android:layout_height="50dp"
            android:id="@+id/buttonRegister"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
            android:text="Registrar"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"

    />

</androidx.constraintlayout.widget.ConstraintLayout>